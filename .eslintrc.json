{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "globals": {
    "firebase": "readonly",
    "Chart": "readonly"
  }
}
